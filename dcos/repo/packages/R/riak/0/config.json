{
  "properties": {
    "riak": {
      "required": [
        "framework-name",
        "instances",
        "cpus",
        "mem",
        "super-chroot",
        "url",
        "master",
        "zk",
        "user",
        "healthcheck-grace-period-seconds",
        "healthcheck-interval-seconds",
        "healthcheck-timeout-seconds",
        "healthcheck-max-consecutive-failures"
      ],
      "properties": {
        "healthcheck-max-consecutive-failures": {
          "default": 5,
          "description": "Memory requirements",
          "type": "number"
        },
        "healthcheck-timeout-seconds": {
          "default": 20,
          "description": "Memory requirements",
          "type": "number"
        },
        "healthcheck-interval-seconds": {
          "default": 60,
          "description": "Memory requirements",
          "type": "number"
        },
        "healthcheck-grace-period-seconds": {
          "default": 300,
          "description": "Memory requirements",
          "type": "number"
        },
        "super-chroot": {
          "default": "true",
          "description": "When this is false, use the default chroot.",
          "type": "string"
        },
        "flags": {
          "default": "-use_reservations",
          "description": "Additional flags include '-use_reservations', when this is true, utilize dynamic reservations and persistent volumes. This only works with versions of Mesos 0.24 and later.",
          "type": "string"
        },
        "node": {
          "properties": {
            "disk": {
              "default": 20000,
              "description": "Per Node Disk requirements",
              "type": "number"
            },
            "mem": {
              "default": 8000,
              "description": "Per Node Memory requirements",
              "type": "number"
            },
            "cpus": {
              "default": 1.0,
              "description": "Per Node CPU requirements",
              "type": "number"
            }
          },
          "depscription": "Resource Requirements Per Riak Node",
          "type": "object"
        },
        "mem": {
          "default": 2048,
          "description": "Memory requirements",
          "type": "number"
        },
        "cpus": {
          "default": 0.5,
          "description": "CPU requirements",
          "type": "number"
        },
        "instances": {
          "default": 1,
          "description": "Number of framework instances",
          "type": "number"
        },
        "auth-secret-file": {
          "default": "",
          "description": "Mesos authentication secret file.",
          "type": "string"
        },
        "auth-principal": {
          "default": "",
          "description": "Mesos authentication principal.",
          "type": "string"
        },
        "auth-provider": {
          "default": "",
          "description": "Authentication provider to use, default is SASL that supports mechanisms.",
          "type": "string"
        },
        "url": {
          "default": "http:\/\/riak-tools.s3.amazonaws.com\/riak-mesos\/coreos\/riak_mesos_linux_amd64_0.2.0.tar.gz",
          "description": "Riak Mesos Framework download URL.",
          "type": "string"
        },
        "role": {
          "default": "riak",
          "description": "Framework Role.",
          "type": "string"
        },
        "framework-name": {
          "default": "riak",
          "description": "Framework Instance Name.",
          "type": "string"
        },
        "user": {
          "default": "root",
          "description": "Framework User.",
          "type": "string"
        },
        "log": {
          "description": "Framework log file location.",
          "type": "string"
        },
        "hostname": {
          "default": "riak.mesos",
          "description": "Framework HTTP API hostname.",
          "type": "string"
        },
        "ip": {
          "description": "Framework HTTP API bind address.",
          "type": "string"
        },
        "zk": {
          "default": "leader.mesos:2181",
          "description": "Zookeeper address. Specify in the format host:port.",
          "type": "string"
        },
        "master": {
          "default": "zk://leader.mesos:2181/mesos",
          "description": "The URL of the Mesos master. The format is zk://host1:port/mesos.",
          "type": "string"
        }
      },
      "depscription": "Riak Mesos Framework specific properties",
      "type": "object"
    },
    "director": {
      "properties": {
        "url": {
          "default": "http://riak-tools.s3.amazonaws.com/riak-mesos/coreos/riak_mesos_director_linux_amd64_0.2.0.tar.gz",
          "description": "The URL of the Proxy package",
          "type": "string"
        }
      },
      "depscription": "Riak Mesos Proxy specific properties",
      "type": "object"
    }
  },
  "type": "object"
}
